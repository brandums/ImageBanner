<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:__XamlGeneratedCode__"
             x:Class="ImagesBanner.MainPage">

    <StackLayout>
        <Button Text="Cargar Imagen Horizontal" Clicked="OnLoadImageHorizontalClicked"/>
        <Label x:Name="WarningLabelHorizontal" Text="No se pueden agregar más imágenes." TextColor="Red" IsVisible="False"/>

        <ScrollView Orientation="Horizontal" Margin="10" HeightRequest="350">
            <StackLayout x:Name="HorizontalContainer" Orientation="Horizontal"/>
        </ScrollView>

        <Button Text="Cargar Imagen Vertical" Clicked="OnLoadImageVerticalClicked"/>
        <Label x:Name="WarningLabelVertical" Text="No se pueden agregar más imágenes." TextColor="Red" IsVisible="False"/>

        <ScrollView Orientation="Vertical" Margin="10" WidthRequest="350" HeightRequest="450">
            <StackLayout x:Name="VerticalContainer" Orientation="Vertical"/>
        </ScrollView>
    </StackLayout>
</ContentPage>
